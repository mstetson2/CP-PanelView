<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mstetson.panelview_alpha"
    android:versionCode="1"
    android:versionName="0.0.1" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.mstetson.panelview_alpha.MainMenu"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.mstetson.panelview_alpha.Bluetooth.ConnectBluetoothActivity" >
        </activity>
        <activity
            android:name="com.mstetson.panelview_alpha.Screens.CoasterPropertiesActivity"
            android:label="@string/title_activity_coaster_properties" >
        </activity>
        <activity android:name="com.mstetson.panelview_alpha.Screens.ScreenSelect" >
        </activity>
        <activity android:name="com.mstetson.panelview_alpha.Screens.EStopStatus" >
        </activity>
        <activity android:name="com.mstetson.panelview_alpha.Screens.InspectionsActivity" >
        </activity>
    </application>

</manifest>