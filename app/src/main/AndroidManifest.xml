<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mstetson.panelview_alpha" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainMenu"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Bluetooth.ConnectBluetoothActivity" >
        </activity>
        <activity
            android:name=".Screens.CoasterPropertiesActivity"
            android:label="@string/title_activity_coaster_properties" >
        </activity>
        <activity android:name=".Screens.ScreenSelect" >
        </activity>
        <activity android:name=".Screens.EStopStatus" >
        </activity>
        <activity android:name=".Screens.InspectionsActivity" >
        </activity>
        <activity android:name=".Screens.LoginActivity" >
        </activity>
    </application>

</manifest>
