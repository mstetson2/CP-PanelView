<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mstetson.panelview_alpha.Screens.EStopStatus">

    <include layout="@layout/header"
        android:id="@+id/header" />

    <!--LEGEND START -->
    <Button
        android:layout_width="275dp"
        android:layout_height="195dp"
        android:background="@drawable/legend_background"
        android:id="@+id/legend_background"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:background="@color/panelview_background"
        android:textColor="@color/black"
        android:text="Legend"
        android:id="@+id/legend_label"
        android:layout_alignTop="@+id/legend_background"
        android:layout_alignStart="@+id/legend_background"
        android:layout_marginTop="2.5dp"
        android:layout_marginLeft="20dp"/>

    <Button
        android:layout_width="@dimen/diagn_square"
        android:layout_height="@dimen/diagn_square"
        android:id="@+id/legend_icon_1"
        android:background="@drawable/status_marker_background_off"
        android:layout_below="@+id/legend_label"
        android:layout_alignStart="@+id/legend_label"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="@dimen/diagn_square"
        android:layout_height="@dimen/diagn_square"
        android:id="@+id/legend_icon_2"
        android:background="@drawable/status_marker_background_mid"
        android:layout_below="@+id/legend_icon_1"
        android:layout_alignStart="@+id/legend_icon_1"
        android:layout_marginTop="5dp"/>

    <Button
        android:layout_width="@dimen/diagn_square"
        android:layout_height="@dimen/diagn_square"
        android:id="@+id/legend_icon_3"
        android:background="@drawable/status_marker_background_on"
        android:layout_below="@+id/legend_icon_2"
        android:layout_alignStart="@+id/legend_icon_2"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/diagn_square"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:text="Stop Button not Pushed"
        android:gravity="center_vertical"
        android:id="@+id/legend_icon_1_label"
        android:layout_alignTop="@+id/legend_icon_1"
        android:layout_toEndOf="@+id/legend_icon_1"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/diagn_square"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:text="Last Stop Button Pushed"
        android:gravity="center_vertical"
        android:id="@+id/legend_icon_2_label"
        android:layout_alignTop="@+id/legend_icon_2"
        android:layout_toEndOf="@+id/legend_icon_2"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/diagn_square"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:text="Stop Active"
        android:gravity="center_vertical"
        android:id="@+id/legend_icon_3_label"
        android:layout_alignTop="@+id/legend_icon_3"
        android:layout_toEndOf="@+id/legend_icon_3"
        android:layout_marginLeft="5dp"/>

    <Button
        android:layout_width="@dimen/diagn_square"
        android:layout_height="@dimen/diagn_square"
        android:id="@+id/legend_icon_4"
        android:background="@drawable/status_marker_background_estop_active"
        android:layout_below="@+id/legend_icon_3"
        android:layout_alignStart="@+id/legend_icon_3"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/diagn_square"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:text="E-STOP Active"
        android:gravity="center_vertical"
        android:id="@+id/legend_icon_4_label"
        android:layout_alignTop="@+id/legend_icon_4"
        android:layout_toEndOf="@+id/legend_icon_4"
        android:layout_marginLeft="5dp"/>

    <Button
        android:layout_width="@dimen/diagn_square"
        android:layout_height="@dimen/diagn_square"
        android:id="@+id/legend_icon_5"
        android:background="@drawable/status_marker_background_estop_depressed"
        android:layout_below="@+id/legend_icon_4"
        android:layout_alignStart="@+id/legend_icon_4"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/diagn_square"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black"
        android:text="E-STOP Depressed"
        android:gravity="center_vertical"
        android:id="@+id/legend_icon_5_label"
        android:layout_alignTop="@+id/legend_icon_5"
        android:layout_toEndOf="@+id/legend_icon_5"
        android:layout_marginLeft="5dp"/>

    <!--LEGEND END -->

</RelativeLayout>
