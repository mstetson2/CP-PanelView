<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mstetson.panelview_alpha.Screens.InspectionsActivity">

    <include layout="@layout/header"
        android:id="@+id/header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:id="@+id/scrollView2" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- APPENDIX 1 START -->

            <Button
                android:layout_width="@dimen/inspections_append_width"
                android:layout_height="140dp"
                android:background="@drawable/legend_background"
                android:id="@+id/insp_1_background"
                android:layout_marginTop="5dp"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="@dimen/diagn_square"
                android:layout_height="@dimen/diagn_square"
                android:id="@+id/insp_1_label_i"
                android:background="@drawable/status_marker_background_off"
                android:layout_below="@+id/insp_1_label"
                android:layout_alignTop="@+id/insp_1_background"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="@dimen/append_title_margin_left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="@color/panelview_background"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="1. Enable Panel"
                android:id="@+id/insp_1_label"
                android:layout_alignTop="@+id/insp_1_background"
                android:layout_toEndOf="@id/insp_1_label_i"
                android:layout_marginTop="@dimen/append_title_margin_top"
                android:layout_marginLeft="10dp"/>

            <Button
                android:layout_width="@dimen/diagn_square"
                android:layout_height="@dimen/diagn_square"
                android:id="@+id/insp_1_i"
                android:background="@drawable/status_marker_background_off"
                android:layout_below="@+id/insp_1_label"
                android:layout_alignStart="@+id/insp_1_label"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/diagn_square"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Turn CONTROL POWER to ON"
                android:id="@+id/insp_1_desc"
                android:layout_alignTop="@+id/insp_1_i"
                android:layout_toRightOf="@+id/insp_1_i"
                android:layout_marginLeft="5dp"/>

            <Button
                android:layout_width="@dimen/diagn_square"
                android:layout_height="@dimen/diagn_square"
                android:id="@+id/insp_1_i2"
                android:background="@drawable/status_marker_background_off"
                android:layout_below="@+id/insp_1_i"
                android:layout_alignStart="@+id/insp_1_i"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/diagn_square"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Switch to MANUAL MODE to begin startup"
                android:id="@+id/insp_1_desc2"
                android:layout_alignTop="@+id/insp_1_i2"
                android:layout_toRightOf="@+id/insp_1_i2"
                android:layout_marginLeft="5dp"/>

            <!-- END APPENDIX A -->

            <!-- START APPENDIX B -->

            <Button
                android:layout_width="@dimen/inspections_append_width"
                android:layout_height="200dp"
                android:background="@drawable/legend_background"
                android:id="@+id/insp_2_background"
                android:layout_marginTop="5dp"
                android:layout_below="@id/insp_1_background"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="520dp"
                android:layout_height="105dp"
                android:background="@drawable/legend_background"
                android:id="@+id/insp_2_background_inner"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/insp_1_background"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="@color/panelview_background"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="2. Startup Tests"
                android:id="@+id/insp_2_label"
                android:layout_alignTop="@+id/insp_2_background"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/append_title_margin_top"
                android:layout_marginLeft="@dimen/append_title_margin_left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="@color/panelview_background"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="a. Lamp Test"
                android:id="@+id/insp_2_label_a"
                android:layout_alignTop="@+id/insp_2_background_inner"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/append_title_margin_top"
                android:layout_marginLeft="35dp"/>

            <Button
                android:layout_width="@dimen/diagn_square"
                android:layout_height="@dimen/diagn_square"
                android:id="@+id/insp_2_i2"
                android:background="@drawable/status_marker_background_off"
                android:layout_below="@+id/insp_2_label_a"
                android:layout_alignStart="@+id/insp_2_label_a"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/diagn_square"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Ensure all lamps are working"
                android:id="@+id/insp_2_desc2"
                android:layout_alignTop="@+id/insp_2_i2"
                android:layout_toRightOf="@+id/insp_2_i2"
                android:layout_marginLeft="5dp"/>

            <Button
                android:layout_width="@dimen/diagn_square"
                android:layout_height="@dimen/diagn_square"
                android:id="@+id/insp_2_i3"
                android:background="@drawable/status_marker_background_off"
                android:layout_below="@+id/insp_2_i2"
                android:layout_alignStart="@+id/insp_2_i2"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/diagn_square"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Press ACKNOWLEDGE to continue"
                android:id="@+id/insp_2_desc3"
                android:layout_alignTop="@+id/insp_2_i3"
                android:layout_toRightOf="@+id/insp_2_i3"
                android:layout_marginLeft="5dp"/>



            <!--END APPENDIX B -->

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
