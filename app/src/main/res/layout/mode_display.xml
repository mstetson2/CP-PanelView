<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="80dp"
    android:layout_height="@dimen/mode_background_height"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:background="@color/mode_background_unselected">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Auto"
        android:textColor="@color/mode_text_unselected"
        android:gravity="center"
        android:id="@+id/autoText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Manual"
        android:textColor="@color/mode_text_unselected"
        android:gravity="center"
        android:id="@+id/manualText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Bypass"
        android:textColor="@color/mode_text_unselected"
        android:gravity="center"
        android:id="@+id/bypassText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:gravity="center"
        android:background="@color/panelview_background"
        android:id="@+id/functionText" />

</LinearLayout>